{
  "manifest_version": 3,
  "name": "Fiverr Conversation Extractor",
  "version": "1.0.3",
  "description": "Extract conversations from Fiverr inbox",
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "https://www.fiverr.com/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "action": {
    "default_title": "Fiverr Conversation Extractor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.fiverr.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["success.html", "cancel.html", "success.js", "checkout.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
